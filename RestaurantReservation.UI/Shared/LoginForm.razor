@inject HttpClient Http
@using System.Net.Http.Json


<EditForm Model="@loginData" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label>Email</label>
        <InputText class="form-control" @bind-Value="loginData.Email" />
    </div>

    <div class="form-group">
        <label>Пароль</label>
        <InputText class="form-control" type="password" @bind-Value="loginData.Password" />
    </div>

    <button class="btn btn-primary" type="submit">Увійти</button>
</EditForm>

@code {
    private LoginData loginData = new();

    private async Task HandleLogin()
    {
        await Http.PostAsJsonAsync("http://localhost:5001/api/login", loginData);
    }

    private class LoginData
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}